<p style="color: green"><%= notice %></p>

<h2>Item</h2>

<hr>

<%= render @item %>

<div>
  <%= link_to "Edit this item", edit_item_path(@item) %>
  <%= button_to "Destroy this item", @item, method: :delete %>
</div>

<hr>

<div>
  <h3>Inventory</h3>

    <% if @item.inventories.empty? %>
      <p>There are no items in inventory.</p>
    <% else %>
      <table>
        <thead>
          <tr>
            <th>Warehouse</th>
            <th>Location</th>
            <th>Quantity</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @item.inventories.each do |inventory| %>
            <tr>
              <td><%= inventory.warehouse.name%></td>
              <td><%= inventory.warehouse.location%></td>
              <td><%= inventory.quantity %></td>
              <td><%= link_to "Show", inventory %></td>
              <td><%= link_to "Edit", edit_inventory_path(inventory) %></td>
              <td><%= link_to "Destroy", inventory, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
</div>
