<p style="color: green"><%= notice %></p>

<h2>Warehouse</h2>

<hr>

<%= render @warehouse %>

<div>
  <%= link_to "Edit this warehouse", edit_warehouse_path(@warehouse) %>
  <%= button_to "Destroy this warehouse", @warehouse, method: :delete %>
</div>

<hr>

<div>
  <h3>Inventory</h3>

  <% if @warehouse.inventories.empty? %>
    <p>There are no items in inventory.</p>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>SKU</th>
          <th>Description</th>
          <th>Quantity</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @warehouse.inventories.each do |inventory| %>
          <tr>
            <td><%= inventory.item.name %></td>
            <td><%= inventory.item.sku %></td>
            <td><%= inventory.item.description %></td>
            <td><%= inventory.quantity %></td>
            <td><%= link_to "Show", inventory %></td>
            <td><%= link_to "Edit", edit_inventory_path(inventory) %></td>
            <td><%= link_to "Destroy", inventory, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>